{
  "dashboard": {
    "id": null,
    "title": "QoderResume Alerts & SLA Dashboard",
    "tags": ["qoder-resume", "alerts", "sla"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "SLA Overview",
        "type": "row",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Uptime SLA (99.9%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(avg_over_time(up{job=\"qoder-resume-backend\"}[24h])) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 1
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 99
                },
                {
                  "color": "green",
                  "value": 99.9
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Response Time SLA (<2s)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 1
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1500
                },
                {
                  "color": "red",
                  "value": 2000
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate SLA (<1%)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 1
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "AI Processing SLA (<30s)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ai_request_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 1
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 20
                },
                {
                  "color": "red",
                  "value": 30
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Critical Alerts",
        "type": "row",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 7
        },
        "collapsed": false
      },
      {
        "id": 7,
        "title": "Service Down Alert",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"qoder-resume-backend\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "ðŸ”´ DOWN",
